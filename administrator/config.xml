<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component" label="COM_ADVSEARCH_COMPONENT_LABEL" description="COM_ADVSEARCH_CRON_DETAILS">

		<field class="btn-group" type= "radio"  default="Sql"  name="adaptor"  label="COM_ADVSEARCH_ADAPTOR_LABEL" description="COM_ADVSEARCH_ADAPTOR_DESC">
			<option value="Algolia">Algolia</option>
			<option value="Solr">Solr</option>
			<option value="mysql">MySql</option>
		</field>

		<field name="search_mode" type="radio" default="1" label="Enable background mode :" description="No - Points the search queries to temp adv search tables. 'Yes' - Points to main adv search tables.">
			 <option value="1">Yes</option>
			 <option value="0">No</option>
         </field>
		<field
			name="global_batch_size" type="text"
			label="Batch Size" default = "200"
			description=""
		/>
		<field
			name="private_key" type="text"
			label="Private Key" default = "abcd1234"
			description=""
		/>
	</fieldset>
	<fieldset name="data_config_src" label="Algolia Configurations" description="">
		<field type="spacer" default="&lt;b&gt;Algolia Parameters&lt;/b&gt;" />
		<field name="algolia_appid" type="text" label="COM_ADVSEARCH_ALGOILIA_APPID" description="COM_ADVSEARCH_ALGOILIA_APPID_DESC" default="">
		</field>
		<field name="algolia_searchapi_key" type="text" label="COM_ADVSEARCH_ALGOILIA_SEARCHAPI_KEY" description="COM_ADVSEARCH_ALGOILIA_INDEXNAME_DESC" default="">
		</field>

		<field name="algolia_insertionapi_key" type="text" label="COM_ADVSEARCH_ALGOILIA_INSERT_API_KEY" description="COM_ADVSEARCH_ALGOILIA_INSERT_API_KEY_DESC" default="">
		</field>

		<field name="algolia_indexname" type="text" label="COM_ADVSEARCH_ALGOILIA_INDEXNAME" description="COM_ADVSEARCH_ALGOILIA_INDEXNAME_DESC" default="">
		</field>
	</fieldset>

	<fieldset name="solr_configs" description="Add Solr Configuration" label="Solr Configurations">

		<field name="solr_hostname" type="text" label="COM_ADVSEARCH_SOLR_HOST_NAME" description="COM_ADVSEARCH_SOLR_HOST_DESC" default="">
		</field>
		<field name="solr_login" type="text" label="COM_ADVSEARCH_SOLR_USER_LOGIN" description="COM_ADVSEARCH_SOLR_USER_LOGIN_DESC" default="">
		</field>
		<field name="solr_password" type="text" label="COM_ADVSEARCH_SOLR_USER_PASSWORD" description="COM_ADVSEARCH_SOLR_USER_PASSWORD_DESC" default="">
		</field>
		<field name="solr_port" type="text" label="COM_ADVSEARCH_SOLR_PORT" description="COM_ADVSEARCH_SOLR_PORT_DESC" default="">
		</field>
		<field name="solr_path" type="text" label="COM_ADVSEARCH_SOLR_PATH" description="COM_ADVSEARCH_SOLR_PATH_DESC" default="">
		</field>

	</fieldset>


	<fieldset name="permissions" description="JCONFIG_PERMISSIONS_DESC" label="JCONFIG_PERMISSIONS_LABEL">

		<field name="rules" type="rules" component="com_advsearch" filter="rules" validate="rules" label="JCONFIG_PERMISSIONS_LABEL" section="component" />
	</fieldset>

</config>
